<h1>Books</h1>
<% @books.each do |book| %>
	<p>Title</p>
	<span><%= book.title %></span>
	<p>Body</p>
	<span><%= book.body  %></span>

	<%= link_to "Show", book_path(book.id) %>
	<%= link_to "Edit", "/books/#{book.id}/edit" %>
	<%= link_to "Delete", "/books/#{book.id}" , method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>

<% end %>


